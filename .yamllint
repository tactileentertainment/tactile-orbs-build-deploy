---
extends: default

rules:
  braces: {
    min-spaces-inside: 1,
    max-spaces-inside: 1
  }
  brackets: {
    min-spaces-inside: 1,
    max-spaces-inside: 1,
    min-spaces-inside-empty: 0,
    max-spaces-inside-empty: 0
  }
  comments-indentation: disable
  indentation: { spaces: 2 }
  line-length: disable
